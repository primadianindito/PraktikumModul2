<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f123"
    tools:context="com.example.asus.primadi_1202154151_modul2_1.com.example.asus.primadi_1202154151_modul2.splashScreen">

    <ImageView
        android:id="@+id/logowarung"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:contentDescription="Ampera Logo"
        android:src="@drawable/warung" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="@android:style/Widget.Holo.ProgressBar.Large"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/logowarung"
        android:layout_marginTop="1dp" />

    <TextView
        android:id="@+id/haraptunggu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/progressBar"
        android:text="HARAP TUNGGU"
        android:textSize="15dp"
        android:textAlignment="center"
        android:layout_marginTop="100dp"
        android:textColor="#f48120" />
</RelativeLayout>
